{% extends 'base.jinja' %}
{% block head %}
    <title>Update User</title>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <h1>Update User</h1>
                <form action="{{ request.url }}" method="POST">
                    <div class="mb-3">
                        <label for="firstname" class="form-label">Voornaam</label>
                        <input type="text" class="form-control" id="firstname" value="{{ user.firstname }}"
                               name="firstname">
                    </div>
                    <div class="mb-3">
                        <label for="infix" class="form-label">Tussenvoegsel</label>
                        <input type="text" class="form-control" id="infix" value="{{ user.infix }}" name="infix">
                    </div>
                    <div class="mb-3">
                        <label for="lastname" class="form-label">Achternaam</label>
                        <input type="text" class="form-control" id="lastname" value="{{ user.lastname }}"
                               name="lastname">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Wachtwoord</label>
                        <input type="password" class="form-control" id="password" value="{{ user.password }}"
                               name="password">
                    </div>
                    <div class="mb-3">
                        <label for="zipcode" class="form-label">Postcode</label>
                        <input type="text" class="form-control" id="zipcode" value="{{ user.zipcode }}" name="zipcode">
                    </div>
                    <div class="mb-3">
                        <label for="gender" class="form-label">Gender</label>
                        <input type="text" class="form-control" id="gender" value="{{ user.gender }}" name="gender">
                    </div>
                    <div class="mb-3">
                        <label for="mail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="mail" value="{{ user.mail }}" name="mail">
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Telefoon nummer
                            <input type="text" class="form-control" id="phonenumber" value="{{ user.phonenumber }}" name="phonenumber">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label for="birthday" class="form-label">geboorte Datum</label>
                        <input type="date" class="form-control" id="birthday" value="{{ user.birthday }}" name="birthday">
                    </div>

                    <button type="submit" class="btn btn-primary rounded-pill">Submit</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}